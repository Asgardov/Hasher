<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>


<AnchorPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.asgard.hasher.controller.Main">
   <children>
      <VBox fx:id="mainVbox" layoutX="147.0" layoutY="64.0" prefHeight="200.0" prefWidth="100.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <HBox fx:id="settingsHBox" prefHeight="50.0" prefWidth="800.0">
               <children>
                  <Label text="Set type of data">
                     <HBox.margin>
                        <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
                     </HBox.margin>
                  </Label>
                  <ComboBox fx:id="typeOfData" prefWidth="150.0" promptText="emails or phones">
                     <HBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </HBox.margin>
                  </ComboBox>
                  <CheckBox fx:id="withValidation" mnemonicParsing="false" selected="true" text="Validate before encode">
                     <HBox.margin>
                        <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
                     </HBox.margin>
                  </CheckBox>
               </children>
            </HBox>
            <HBox fx:id="inputsHBox" maxHeight="-Infinity" prefHeight="550.0" prefWidth="800.0">
               <children>
                  <TextArea fx:id="dataToEncode" maxWidth="-Infinity" prefWidth="330.0" promptText="Paste emails or phones here">
                     <HBox.margin>
                        <Insets bottom="10.0" left="15.0" right="10.0" top="10.0" />
                     </HBox.margin>
                  </TextArea>
                  <VBox alignment="CENTER">
                     <children>
                        <Button fx:id="encodeButton" contentDisplay="CENTER" mnemonicParsing="false" onAction="#encodeData" text="Encode">
                           <VBox.margin>
                              <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
                           </VBox.margin>
                        </Button>
                        <Button fx:id="copyAllButton" disable="true" mnemonicParsing="false" onAction="#copyAll" text="Copy ALL">
                           <VBox.margin>
                              <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
                           </VBox.margin>
                        </Button>
                     </children>
                  </VBox>
                  <TabPane fx:id="tabPane" maxWidth="-Infinity" prefHeight="200.0" prefWidth="330.0" tabClosingPolicy="UNAVAILABLE">
                    <tabs>
                      <Tab fx:id="md5Tab" text="MD5">
                        <content>
                          <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                                 <children>
                                    <TextArea fx:id="md5TextArea" editable="false" promptText="Here will be encoded MD5" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                                       <padding>
                                          <Insets bottom="3.0" left="3.0" right="3.0" top="3.0" />
                                       </padding>
                                    </TextArea>
                                 </children>
                              </AnchorPane>
                        </content>
                      </Tab>
                      <Tab fx:id="sha256Tab" text="SHA256">
                        <content>
                          <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                                 <children>
                                    <TextArea fx:id="sha256TextArea" editable="false" layoutX="-86.0" layoutY="-86.0" prefHeight="200.0" prefWidth="200.0" promptText="Here will be encoded SHA256" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                                       <padding>
                                          <Insets bottom="3.0" left="3.0" right="3.0" top="3.0" />
                                       </padding>
                                    </TextArea>
                                 </children>
                              </AnchorPane>
                        </content>
                      </Tab>
                    </tabs>
                     <HBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </HBox.margin>
                  </TabPane>
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
